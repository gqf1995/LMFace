<!--义卖顶部条件选择器左边listitem-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/sale_chose_item_one_lin"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bighdp"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal" >

    <ImageView
        android:id="@+id/chose_item_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/chose_item_msg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/tinymdp"
        android:layout_marginTop="@dimen/smallmdp"
        android:layout_marginBottom="@dimen/smallmdp"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="全部分类"
        android:paddingLeft="@dimen/smallmdp"
        android:textSize="@dimen/smallsp"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/chose_item_ishave_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_deal_arrow_right" />

</LinearLayout>
